<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black" >

    <ImageButton
        android:id="@+id/titleSettingsButton"
        android:layout_width="@dimen/settingsIconSize"
        android:layout_height="@dimen/settingsIconSize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/ic_tab_preferences_unselected"
        android:contentDescription="@string/settings"
        android:visibility="invisible" />

    <com.worthwhilegames.cardgames.shared.TextView
        android:id="@+id/title"
        style="@style/TitleFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip" >

        <ProgressBar
            android:id="@+id/titleProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/titleRefreshButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_menu_refresh"
            android:contentDescription="@string/refresh"
            android:text=""
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>