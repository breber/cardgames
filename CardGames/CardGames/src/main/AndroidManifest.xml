<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worthwhilegames.cardgames"
    android:versionCode="11"
    android:versionName="1.1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- For Wifi Mode -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher_card_games"
        android:label="@string/app_name"
        android:theme="@style/Theme.CardGames" >
        <activity
            android:name=".shared.activities.MainMenu"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shared.activities.RulesActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".shared.activities.AboutActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".player.activities.ConnectActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".gameboard.activities.ConnectActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".gameboard.activities.ConnectionFailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".player.activities.ConnectionFailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".player.activities.GameResultsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".gameboard.activities.GameResultsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".player.activities.PauseMenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".gameboard.activities.PauseMenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".shared.activities.QuitApplicationActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".shared.activities.QuitGameActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".player.activities.SelectSuitActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".player.activities.EnterNameActivty"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />
        <activity
            android:name=".player.activities.ShowCardsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".gameboard.activities.GameboardActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".shared.activities.DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_device_list"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".shared.activities.PreferencesActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames" />
        <activity
            android:name=".shared.activities.RoundScoresActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.CardGames.Dialog" />

        <!-- Ad Activities -->
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>